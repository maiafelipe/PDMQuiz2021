<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/cadastroPergunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Cadastrar Pergunta"
        android:textSize="25dp"
        android:onClick="abrirPergunta"
        />

    <Button
        android:id="@+id/aplicarPergunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cadastroPergunta"
        android:text="Aplicar Quiz"
        android:textSize="25dp"
        android:onClick="aplicarPergunta"
        />

    <TextView
        android:id="@+id/pontuacaoLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ultima pontuacao: 0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aplicarPergunta"
        />


</androidx.constraintlayout.widget.ConstraintLayout>